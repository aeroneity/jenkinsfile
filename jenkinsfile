pipeline {
    agent any

    environment {
        DIRECTORY_PATH = '/desktop'
        TESTING_ENVIRONMENT = 'staging'
        PRODUCTION_ENVIRONMENT = 'Charlotte'
    }

    stages {
        stage('Build') {
            steps {
                echo "Building code from ${env.DIRECTORY_PATH}..."
            }
        }

        stage('Test') {
            steps {
                echo "Testing in ${env.TESTING_ENVIRONMENT}..."
            }
        }

        stage('Code Quality Check') {
            steps {
                echo 'Running code quality tools...'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying to ${env.TESTING_ENVIRONMENT}..."
            }
        }

        stage('Approval') {
            steps {
                input message: "Deploy to ${env.PRODUCTION_ENVIRONMENT}?"
            }
        }

        stage('Deploy to Production') {
            steps {
                echo "Deploying to ${env.PRODUCTION_ENVIRONMENT}..."
            }
        }
    }
}
